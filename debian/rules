#!/usr/bin/make -f

%:
	dh $@

build: build-arch

build-arch:
	cd wkhtmltopdf && scripts/build.py posix-local && cd ..

override_dh_auto_build:
override_dh_auto_install:
	-mkdir debian/wkhtmltopdf-qtstatic
	mv wkhtmltopdf/static-build/posix-local/wkhtmltox*/* debian/wkhtmltopdf-qtstatic/ && \
	strip debian/wkhtmltopdf-qtstatic/lib/* debian/wkhtmltopdf-qtstatic/bin/*
